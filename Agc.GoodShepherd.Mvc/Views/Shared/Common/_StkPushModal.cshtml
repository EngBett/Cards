@model string


<div id="small-dialog" class="zoom-anim-dialog mfp-hide dialog-with-tabs">

    <!--Tabs -->
    <div class="sign-in-form" id="app">

        <ul class="popup-tabs-nav">
            <li>
                <a href="#tab">Give</a>
            </li>
        </ul>

        <div class="popup-tabs-container">

            <!-- Tab -->
            <div class="popup-tab-content" id="tab">

                <!-- Welcome Text -->
                <div class="welcome-text">
                    <h3>Give via mpesa</h3>
                </div>

                <!-- Form -->
                <form method="post" id="apply-now-form">

                    <div class="input-with-icon-left">
                        <i class="icon-line-awesome-mobile"></i>
                        <input type="text" class="input-text with-border" name="phoneNumber" id="phoneNumber" placeholder="Phone number e.g. +254712345678" required/>
                    </div>

                </form>

                <!-- Button -->
                <button class="button margin-top-35 full-width button-sliding-icon ripple-effect" type="submit" form="apply-now-form">Proceed <i class="icon-material-outline-arrow-right-alt"></i></button>

            </div>

        </div>
    </div>
</div>
